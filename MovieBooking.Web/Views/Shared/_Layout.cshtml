@using Microsoft.AspNetCore.Http
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MovieBooking</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          rel="stylesheet" />
</head>
<body>

    @{
        var isLoggedIn = User.Identity?.IsAuthenticated ?? false;
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">

                <a class="navbar-brand fw-bold"
                   asp-controller="Home"
                   asp-action="Index">
                    🎬 MovieBooking
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <ul class="navbar-nav me-auto">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Booking" asp-action="Index">
                                    My Bookings
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning"
                                   asp-controller="Admin"
                                   asp-action="Dashboard">
                                    Admin Panel
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger"
                                   asp-controller="SuperAdmin"
                                   asp-action="Dashboard">
                                    Super Admin
                                </a>
                            </li>
                        }

                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle"
                               href="#"
                               data-bs-toggle="dropdown">
                                <i class="fa-solid fa-user"></i>
                                @(isLoggedIn? User.Identity!.Name : "Account")
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">

                                @if (!isLoggedIn)
                                {
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Account"
                                           asp-action="Login">
                                            Login
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Account"
                                           asp-action="Register">
                                            Register
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="dropdown-item-text">
                                        Role:
                                        <strong>@User.Claims.First(c => c.Type == ClaimTypes.Role).Value</strong>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item text-danger"
                                           asp-controller="Account"
                                           asp-action="Logout">
                                            Logout
                                        </a>
                                    </li>
                                }

                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">

            @if (User.IsInRole("SuperAdmin"))
            {
                @await Html.PartialAsync("_SuperAdminSidebar")
            }

            <main class="col p-4">
                @RenderBody()
            </main>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
