@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MovieBooking</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          rel="stylesheet" />
</head>
<body>

    @{
        var token = Context.Request.Cookies["AuthToken"];
        var role = Context.Request.Cookies["UserRole"];
        var isLoggedIn = !string.IsNullOrEmpty(token);
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">

                <!-- BRAND -->
                <a class="navbar-brand fw-bold"
                   asp-controller="Home"
                   asp-action="Index">
                    🎬 MovieBooking
                </a>

                <!-- TOGGLER -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- LEFT MENU -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="Privacy">
                                Privacy
                            </a>
                        </li>

                        @* USER *@
                        @if (isLoggedIn && role == "USER")
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Booking"
                                   asp-action="Index">
                                    My Bookings
                                </a>
                            </li>
                        }

                        @* ADMIN *@
                        @if (isLoggedIn && role == "ADMIN")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning"
                                   asp-controller="Admin"
                                   asp-action="Dashboard">
                                    Admin Panel
                                </a>
                            </li>
                        }

                        @* SUPER ADMIN *@
                        @if (isLoggedIn && role == "SUPER_ADMIN")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger"
                                   asp-controller="SuperAdmin"
                                   asp-action="Dashboard">
                                    Super Admin
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- RIGHT ACCOUNT DROPDOWN -->
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown">
                                <i class="fa-solid fa-user"></i>
                                @(isLoggedIn ? "My Account" : "Account")
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">

                                @if (!isLoggedIn)
                                {
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Account"
                                           asp-action="Login">
                                            <i class="fa-solid fa-right-to-bracket me-1"></i>
                                            Login
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Account"
                                           asp-action="Register">
                                            <i class="fa-solid fa-user-plus me-1"></i>
                                            Register
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <span class="dropdown-item-text">
                                            Role:
                                            <strong>@role</strong>
                                        </span>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item text-danger"
                                           asp-controller="Account"
                                           asp-action="Logout">
                                            <i class="fa-solid fa-right-from-bracket me-1"></i>
                                            Logout
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
