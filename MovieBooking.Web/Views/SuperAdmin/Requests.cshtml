@model List<MovieBooking.Web.ApiContracts.AdminRequests.AdminRequestResponse>
<h2 class="mt-4">📥 Pending Requests</h2>

<table class="table table-striped shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Type</th>
            <th>Status</th>
            <th>Requested At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.RequestType</td>
                <td>@r.Status</td>
                <td>@r.RequestedAt</td>
                <td>
                    <a asp-action="Approve" asp-route-id="@r.AdminRequestId"
                       class="btn btn-success btn-sm">Approve</a>
                    <a asp-action="Reject" asp-route-id="@r.AdminRequestId"
                       class="btn btn-danger btn-sm ms-1">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
