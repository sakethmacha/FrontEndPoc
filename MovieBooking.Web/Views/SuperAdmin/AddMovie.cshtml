@model AddMovieViewModel
<h2 class="mt-4">➕ Add Movie</h2>

<form method="post" class="card p-4 shadow-sm">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="row">
        <div class="col">
            <label>Duration (minutes)</label>
            <input asp-for="DurationMinutes" class="form-control" />
        </div>
        <div class="col">
            <label>Release Date</label>
            <input asp-for="ReleaseDate" type="date" class="form-control" />
        </div>
    </div>

    <div class="mt-3">
        <label>Poster URL</label>
        <input asp-for="PosterUrl" class="form-control" />
    </div>

    <button class="btn btn-success mt-4">Save Movie</button>
</form>
