@model List<MovieBooking.Web.ApiContracts.Theatres.TheatreResponse>
<h2 class="mt-4">🏢 Theatres</h2>

<a asp-action="AddTheatre" class="btn btn-primary mb-3">➕ Add Theatre</a>
<a asp-action="AddScreen" class="btn btn-secondary mb-3 ms-2">➕ Add Screen</a>

<table class="table table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Name</td>
                <td>@t.Location</td>
                <td>
                    <span class="badge @(t.IsActive ? "bg-success" : "bg-danger")">
                        @(t.IsActive ? "Active" : "Inactive")
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>
