@model List<MovieBooking.Web.ApiContracts.Theatres.TheatreResponse>

@{
    ViewData["Title"] = "Theatres";
}

<style>
    .theatre-card {
        border-radius: 18px;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        border: none;
    }

        .theatre-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 20px 35px rgba(0,0,0,0.12);
        }

    .theatre-title {
        font-weight: 600;
        font-size: 1.05rem;
    }

    .theatre-meta {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .status-badge {
        font-size: 0.8rem;
        padding: 6px 10px;
        border-radius: 12px;
    }

    .empty-state {
        border: 2px dashed #dee2e6;
        border-radius: 18px;
        padding: 40px;
        text-align: center;
        background-color: #fafafa;
    }
</style>

<div class="container mt-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">🏢 Theatres</h2>
            <small class="text-muted">Manage theatres and their screens</small>
        </div>

        <div>
            <a asp-action="AddTheatre" class="btn btn-primary fw-semibold">
                <i class="bi bi-plus-lg"></i> Add Theatre
            </a>
            <a asp-action="AddScreen" class="btn btn-outline-secondary fw-semibold ms-2">
                <i class="bi bi-layout-split"></i> Add Screen
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <!-- EMPTY STATE -->
        <div class="empty-state shadow-sm">
            <h5 class="fw-bold">No Theatres Available</h5>
            <p class="text-muted mb-3">
                Add theatres to start managing screens and showtimes.
            </p>
            <a asp-action="AddTheatre" class="btn btn-outline-primary">
                ➕ Add Theatre
            </a>
        </div>
    }
    else
    {
        <!-- THEATRE CARDS -->
        <div class="row g-4">
            @foreach (var t in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card theatre-card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">

                            <!-- TITLE & STATUS -->
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div class="theatre-title">
                                    <i class="bi bi-building text-muted me-1"></i>
                                    @t.Name
                                </div>

                                @if (t.IsActive)
                                {
                                    <span class="badge bg-success status-badge">
                                        Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger status-badge">
                                        Inactive
                                    </span>
                                }
                            </div>

                            <!-- META -->
                            <div class="theatre-meta mb-3">
                                <i class="bi bi-geo-alt"></i>
                                @t.Location
                            </div>

                            <!-- ACTIONS -->
                            <div class="mt-auto d-flex gap-2">
                                <a asp-action="EditTheatre"
                                   asp-route-id="@t.TheatreId"
                                   class="btn btn-sm btn-outline-primary w-100">
                                    Edit
                                </a>

                                <a asp-action="Screens"
                                   asp-route-theatreId="@t.TheatreId"
                                   class="btn btn-sm btn-outline-secondary w-100">
                                    Screens
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
