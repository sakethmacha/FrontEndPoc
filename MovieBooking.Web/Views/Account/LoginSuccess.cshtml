@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <!-- Success Banner -->
            <div class="alert alert-success d-flex align-items-center shadow-sm mb-4" role="alert">
                <div class="me-3 fs-3">✅</div>
                <div>
                    <h5 class="mb-1 fw-bold">Login Successful</h5>
                    <span class="text-muted">
                        Welcome back! You are now logged in and ready to book movies.
                    </span>
                </div>
            </div>

            <!-- Main Dashboard Card -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">

                    <h3 class="fw-bold mb-3">
                        🎬 Movie Booking Dashboard
                    </h3>

                    <p class="text-muted mb-4">
                        From here, you can explore movies, select theatres, book seats,
                        manage bookings, and more.
                    </p>

                    <div class="row g-4">

                        <!-- Profile -->
                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <div class="fs-1 mb-2">👤</div>
                                    <h5 class="fw-semibold">My Profile</h5>
                                    <p class="text-muted small">
                                        Manage your account details and preferences.
                                    </p>
                                    <a href="#" class="btn btn-outline-secondary btn-sm">
                                        Profile Settings
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- Logout -->
                    <hr class="my-4" />

                    <div class="text-end">
                        <a asp-controller="Account" asp-action="Logout"
                           class="btn btn-danger px-4">
                            Logout
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
